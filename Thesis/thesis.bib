journal = {Global Change Biology},
keywords = {Climate disturbances,Ecosystem stability,Normalized Difference Vegetation Index,Reliability,Remote sensing,Resilience,Resistance,Variance},
number = {7},
pages = {2149--2161},
pmid = {24777443},
