eprint = {arXiv:1011.1669v3},
file = {:home/david/Documents/Mendeley{\_}Desktop/Petchey, Gaston - 2006 - Functional diversity Back to basics and looking forward.pdf:pdf},
isbn = {1461-023X},
issn = {1461023X},
keywords = {Context dependence,Ecosystems,Functional classification,Indirect use value,Phenetics,Redundancy,Species,Species richness,Traits},
